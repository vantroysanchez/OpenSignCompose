:3001 {
    reverse_proxy client:3000 {
        header_up Host {host}
        header_up X-Forwarded-Proto {scheme}
    }

    handle_path /api/* {
        reverse_proxy server:8080 {
            header_up Host {host}
            header_up X-Forwarded-Proto {scheme}
        }
        rewrite * {uri}
    }
}
